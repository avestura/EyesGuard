<Page
    x:Class="EyesGuard.Pages.Donate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:EyesGuard.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:lang="clr-namespace:EyesGuard.Localization"
    xmlns:local="clr-namespace:EyesGuard.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{lang:LocalizedString 'Application.Donate.PageTitle'}"
    d:DesignHeight="500"
    d:DesignWidth="600"
    x:Name="this"
    Background="#FF006A9F"
    FontFamily="{StaticResource HastiUI.Fonts.IRANSans}"
    FlowDirection="{lang:LocalizedFlowDirection}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome
                    Height="28"
                    Margin="0,0,5,0"
                    Foreground="#F44242"
                    Icon="Heart" />
                <TextBlock
                    FontSize="18"
                    Foreground="White"
                    Text="{lang:LocalizedString 'Application.Donate.BeforeDonation.Content.InnerTitle'}" />
            </StackPanel>
            <TextBlock
                MaxWidth="450"
                Margin="10,5"
                Foreground="White"
                Text="{lang:LocalizedString 'Application.Donate.BeforeDonation.Content.Message'}"
                TextAlignment="Justify"
                TextWrapping="Wrap" />

            <Grid
                Margin="0,10"
                HorizontalAlignment="Stretch"
                TextBlock.Foreground="White">
                <Grid.RowDefinitions>
                    <RowDefinition />

                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <Button
                    Grid.Row="6"
                    Grid.Column="1"
                    Height="30"
                    Padding="10,0"
                    Click="DonateButton_Click"
                    Content="{lang:LocalizedString 'Application.Donate.BeforeDonation.Content.ButtonText'}"
                    FontSize="15"
                    Style="{DynamicResource ButtonTemplate.Green}" />
            </Grid>

        </StackPanel>

    </Grid>
</Page>
