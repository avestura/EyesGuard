<Page
    x:Class="EyesGuard.Views.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:EyesGuard.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:lang="clr-namespace:EyesGuard.Localization"
    xmlns:local="clr-namespace:EyesGuard.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="this"
    Title="{lang:LocalizedString 'EyesGuard.Settings.Title'}"
    d:DesignWidth="800"
    Background="#FF006A9F"
    FlowDirection="{lang:LocalizedFlowDirection}"
    FontFamily="{StaticResource HastiUI.Fonts.AppFont}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Padding="0,0,0,15"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="0,10" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="30"
                        Foreground="White"
                        Icon="ClockOutline" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSettings.Title'}" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="6"
                        Grid.Column="0"
                        Margin="6,-0.5,0,0"
                        BorderBrush="White"
                        BorderThickness="2,0,0,0"
                        FlowDirection="LeftToRight" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSettings.GapBetweenTwoShortBreak'}" />
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <c:NumOnlyTextbox
                            x:Name="shortGapHours"
                            MinWidth="50"
                            Margin="10,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Hour'}" />
                        <c:NumOnlyTextbox
                            x:Name="shortGapMinutes"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="12"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Minutes'}" />
                        <c:NumOnlyTextbox
                            x:Name="shortGapSeconds"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Second'}" />

                    </StackPanel>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSettings.GapBetweenTwoLongBreak'}" />
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <c:NumOnlyTextbox
                            x:Name="longGapHours"
                            MinWidth="50"
                            Margin="10,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="1"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Hour'}" />
                        <c:NumOnlyTextbox
                            x:Name="longGapMinutes"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="15"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Minutes'}" />
                        <c:NumOnlyTextbox
                            x:Name="longGapSeconds"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Second'}" />

                    </StackPanel>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSettings.ShortBreakDuration'}" />
                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <c:NumOnlyTextbox
                            x:Name="shortDurationHours"
                            MinWidth="50"
                            Margin="10,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Hour'}" />
                        <c:NumOnlyTextbox
                            x:Name="shortDurationMinutes"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Minutes'}" />
                        <c:NumOnlyTextbox
                            x:Name="shortDurationSeconds"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="8"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Second'}" />

                    </StackPanel>
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSettings.LongBreakDuration'}" />
                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <c:NumOnlyTextbox
                            x:Name="longDurationHours"
                            MinWidth="50"
                            Margin="10,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Hour'}" />
                        <c:NumOnlyTextbox
                            x:Name="longDurationMinutes"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="5"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Minutes'}" />
                        <c:NumOnlyTextbox
                            x:Name="longDurationSeconds"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            MaxLength="2"
                            Style="{DynamicResource WhiteTextBox}"
                            Text="0"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.TimeSeparators.Second'}" />

                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="30"
                        Foreground="White"
                        Icon="UserCircle" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.Title'}" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="7"
                        Grid.Column="0"
                        Margin="6,-0.5,0,0"
                        BorderBrush="White"
                        BorderThickness="2,0,0,0"
                        FlowDirection="LeftToRight" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="forceUserCheckbox"
                            VerticalAlignment="Center"
                            Checked="forceUserCheckbox_Checked"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.ForceUser'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.ForceUserToolTip'}"
                            Unchecked="forceUserCheckbox_Unchecked" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="onlyOneShortbreakCheckbox"
                            VerticalAlignment="Center"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.OnlyOneShortBreak'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.OnlyOneShortBreakToolTip'}" />

                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="alertBeforeLongbreak"
                            VerticalAlignment="Center"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.AlertBeforeLongBreak'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.AlertBeforeLongBreakToolTip'}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal"
                        ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.StartupApplicationToolTip'}">
                        <CheckBox
                            x:Name="startupCheckbox"
                            VerticalAlignment="Center"
                            Click="startupCheckbox_Click"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.StartupApplication'}"
                            Foreground="White"
                            IsChecked="True"
                            IsEnabled="False"
                            Style="{DynamicResource WhiteCheckbox}" />

                    </StackPanel>

                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="sytemIdleCheckbox"
                            VerticalAlignment="Center"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.SystemIdle'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.SystemIdleToolTipJoined'}" />

                    </StackPanel>
                    <StackPanel
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="shortBreakAllowCloseWithRightCLick"
                            VerticalAlignment="Center"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.ShortBreakAllowCloseWithRightCLick'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.UserSettings.ShortBreakAllowCloseWithRightCLickToolTip'}" />
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="30"
                        Foreground="White"
                        Icon="CheckCircle" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.Title'}" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="4"
                        Grid.Column="0"
                        Margin="6,-0.5,0,0"
                        BorderBrush="White"
                        BorderThickness="2,0,0,0"
                        FlowDirection="LeftToRight" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="storeStatsCheckbox"
                            VerticalAlignment="Center"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.StoreStats'}"
                            Foreground="White"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.StoreStatsToolTip'}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Foreground="White">
                            <TextBlock Text="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.ClearStatsText'}" />
                            <Hyperlink
                                Click="ClearHistoryFirstStep_Click"
                                Foreground="#FFF6B29F"
                                TextDecorations="{x:Null}">
                                <TextBlock Foreground="#FFFDC6C6" Text="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.ClearStats'}" />
                            </Hyperlink>
                            <TextBlock
                                x:Name="uSureBlock"
                                Foreground="White"
                                Visibility="Collapsed">
                                <TextBlock Text="(" />
                                <TextBlock Foreground="#FFEAEAEA" Text="{lang:LocalizedString 'EyesGuard.Settings.AreYouSure'}" />
                                <Hyperlink Click="ClearHistory_Click" TextDecorations="{x:Null}">
                                    <TextBlock Foreground="#FFFDC6C6" Text="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.YesDeleteData'}" />
                                </Hyperlink>
                                <TextBlock
                                    Margin="0,0,2,0"
                                    Foreground="White"
                                    Text="،" />
                                <Hyperlink Click="ClearHistoryCancel_Click" TextDecorations="{x:Null}">
                                    <TextBlock Foreground="#FFFDC6C6" Text="{lang:LocalizedString 'EyesGuard.Settings.StatsSettings.NoKeepData'}" />
                                </Hyperlink>
                                <TextBlock Text=")" />
                            </TextBlock>
                        </TextBlock>

                    </StackPanel>

                </Grid>

                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="30"
                        Foreground="White"
                        Icon="Language" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.Title'}" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.RowSpan="10"
                        Grid.Column="0"
                        Margin="6,-0.5,0,0"
                        BorderBrush="White"
                        BorderThickness="2,0,0,0"
                        FlowDirection="LeftToRight" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.SelectLanguage'}" />
                        <ComboBox
                            x:Name="LanguagesCombo"
                            MinWidth="200"
                            Margin="10,0,0,0"
                            BorderThickness="0"
                            DisplayMemberPath="NativeName"
                            Foreground="White"
                            IsReadOnly="True"
                            SelectedIndex="0"
                            SelectedValuePath="Name"
                            SelectionChanged="LanguagesCombo_SelectionChanged"
                            Style="{DynamicResource EyesGuard.ComboBox}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="10"
                            Foreground="White"
                            Text="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.MaintainMessage'}" />
                        <TextBlock
                            x:Name="MaintainersLinks"
                            Margin="5,0,0,0"
                            FontSize="10" />

                    </StackPanel>

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="2"
                        Margin="5,0,0,10"
                        Orientation="Horizontal">
                        <TextBlock x:Name="RestartRequired"
                            Foreground="#FFEE2828"
                            Text="{lang:LocalizedString EyesGuard.Settings.LanguageSettings.RestartRequired}" FontSize="10" FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="5"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="UseLanguageAsSourceCheckbox"
                            VerticalAlignment="Center"
                            Checked="UseLanguageAsSourceCheckbox_CheckedChanged"
                            Content="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.MessagesFromLangFile'}"
                            Foreground="White"
                            IsChecked="True"
                            Style="{DynamicResource WhiteCheckbox}"
                            ToolTip="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.MessagesFromLangFileToolTip'}"
                            Unchecked="UseLanguageAsSourceCheckbox_CheckedChanged" />

                    </StackPanel>

                    <Grid
                        Grid.Row="5"
                        Grid.Column="2"
                        Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="18*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,-0.8,4.8"
                            Orientation="Horizontal">
                            <Button
                                x:Name="AddBtn"
                                Padding="10,2"
                                Click="AddBtn_Click"
                                Content="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.AddMessage'}"
                                Style="{DynamicResource ButtonTemplate.Green}" />
                            <Popup
                                x:Name="NewMessagePopup"
                                PlacementTarget="{Binding ElementName=AddBtn}"
                                PopupAnimation="Slide"
                                StaysOpen="False">
                                <Border
                                    Padding="10"
                                    Background="#AA006A9F"
                                    BorderBrush="#1979A8"
                                    BorderThickness="1"
                                    TextBlock.Foreground="White">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.EnterNewMessage'}" />
                                        <TextBox x:Name="MessageContent" Width="250" />
                                        <Button
                                            Margin="0,5,0,0"
                                            Click="SubmitMessageButton_Click"
                                            Content="{lang:LocalizedString 'EyesGuard.Settings.LanguageSettings.Submit'}"
                                            Style="{DynamicResource ButtonTemplate.Green}" />
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>
                        <ListBox
                            x:Name="ShortMessages"
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            MaxHeight="150"
                            Margin="0,0.2,-0.8,0.2"
                            HorizontalContentAlignment="Stretch"
                            Background="#44FFFFFF"
                            BorderThickness="0"
                            Foreground="White"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding}" />
                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="DeleteButton_Click"
                                            Tag="{Binding}"
                                            Visibility="{Binding ElementName=this, Path=DeleteButtonVisibility}">
                                            <fa:ImageAwesome
                                                Width="16"
                                                Foreground="#FF8B3A3A"
                                                Icon="TrashOutline" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                </Grid>

            </WrapPanel>
        </ScrollViewer>
        <StackPanel
            Grid.Row="1"
            Margin="-20,0,0,0"
            Background="#19FFFFFF">
            <Button
                Margin="10"
                Padding="20,5"
                HorizontalAlignment="Right"
                Click="SaveButton_Click"
                Content="{lang:LocalizedString 'EyesGuard.Settings.SaveSettings'}"
                Style="{DynamicResource ButtonTemplate.Green}" />
        </StackPanel>
    </Grid>

</Page>
